    let currentLang = 'es';

    // Función para cambiar el idioma
    function changeLanguage(lang) {
      currentLang = lang;
      document.querySelectorAll('[data-translate]').forEach(element => {
        const key = element.getAttribute('data-translate');
        if (translations[lang][key]) {
          element.textContent = translations[lang][key];
        }
      });
      
      // Actualizar el botón de idioma
     document.getElementById('lang-toggle').textContent = lang === 'es' ? 'EN' : 'ES';
    }

    // Event listener para el botón de cambio de idioma
    document.getElementById('lang-toggle').addEventListener('click', function() {
      changeLanguage(currentLang === 'es' ? 'en' : 'es');
    });


    document.addEventListener('DOMContentLoaded', () => {
        const LANG_KEY = 'userLanguagePreference';
        const defaultLang = 'ES';
        
        // La clave es la persistencia
        const savedLang = localStorage.getItem(LANG_KEY);
        const currentLanguage = savedLang || defaultLang;

   

    
         if (currentLanguage === 'EN') {
             changeLanguage('en');
        } else {
             changeLanguage('es'); 
         }
