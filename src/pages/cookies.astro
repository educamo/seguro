            <table class="min-w-full bg-white border border-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-blue-900 uppercase tracking-wider" data-translate="cookies_table_service">Servicio</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-blue-900 uppercase tracking-wider" data-translate="cookies_table_purpose">Propósito</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-blue-900 uppercase tracking-wider" data-translate="cookies_table_link">Política</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-black">Google Analytics</td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-black" data-translate="cookies_google_analytics">Análisis de tráfico y comportamiento del usuario</td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm">
                    <a href="https://policies.google.com/privacy" target="_blank" rel="noopener" class="text-blue-900 hover:underline" data-translate="cookies_view_policy">Ver política</a>
                  </td>
                </tr>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-black">Facebook Pixel</td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-black" data-translate="cookies_facebook_pixel">Publicidad personalizada y remarketing</td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm">
                    <a href="https://www.facebook.com/policy.php" target="_blank" rel="noopener" class="text-blue-900 hover:underline" data-translate="cookies_view_policy">Ver política</a>
                  </td>
                </tr>
                <tr>
