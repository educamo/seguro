---
// 1. Obtener la ruta actual (pathname) usando Astro.url
const currentPath = Astro.url.pathname;

// 2. Definir las rutas y sus URLs
const legalLinks = [
  {
    href: '/seguro/privacidad',
    text: 'Política de privacidad',
    translateKey: 'footer_privacy',
  },
  {
    href: '/seguro/terminos',
    text: 'Términos y condiciones',
    translateKey: 'footer_terms',
  },
  {
    href: '/seguro/cookies',
    text: 'Política de cookies',
    translateKey: 'footer_cookies',
  },
];

// Función para determinar las clases del enlace
const getLinkClass = (href) => {
  // Asegurarse de que ambos terminen en '/' o no, para una comparación consistente
  const normalizedCurrentPath = currentPath.endsWith('/') && currentPath !== '/' ? currentPath.slice(0, -1) : currentPath;
  const normalizedHref = href.endsWith('/') && href !== '/' ? href.slice(0, -1) : href;

  // Comprueba si la ruta actual coincide exactamente con la ruta del enlace
  const isActive = normalizedCurrentPath === normalizedHref;
  
  // Asigna clases condicionalmente
  return `hover:text-orange-400 transition-colors duration-300 ${isActive ? 'text-orange-400' : ''}`;
};

// 3. Obtener el año actual en el frontmatter
const currentYear = new Date().getFullYear();
